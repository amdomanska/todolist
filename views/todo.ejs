<html>
  <head>
    <title> TODO LIST </title>
    <style>
      a {text-decoration: none; color: black;}
    </style>
  </head>

  <body>
    <h1>My ToDo List</h1>
    <ul>
      <% todolist.forEach(function(task,index){ %>
        <li><a href="/todo/delete/<%= index %>">âœ˜ </a><%= task %></li>
      <% }); %>
